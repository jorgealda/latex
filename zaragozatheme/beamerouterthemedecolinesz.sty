\mode<presentation>

% String used between the current page and the total page count.
\def\beamer@decolinesz@pageofpages{/}
\DeclareOptionBeamer{pageofpages}{\def\beamer@decolinesz@pageofpages{#1}}

% Show a line below the frame title.
\DeclareOptionBeamer{titleline}[true]{\def\beamer@decolinesz@titleline{#1}}


\ExecuteOptionsBeamer{titleline=false}
\ProcessOptionsBeamer

% Colors.
\setbeamercolor*{lineup}{parent=palette primary}
\setbeamercolor*{linemid}{parent=palette secondary}
\setbeamercolor*{linebottom}{parent=palette tertiary}
\setbeamercolor*{page header}{parent=titlelike, fg=white}

% Lengths
\newlength{\headerheight}
\setlength{\headerheight}{.045\paperheight}
\newlength{\beamer@decolinesz@lineup}
\setlength{\beamer@decolinesz@lineup}{.025\paperheight}
\newlength{\beamer@decolinesz@linemid}
\setlength{\beamer@decolinesz@linemid}{.015\paperheight}
\newlength{\beamer@decolinesz@linebottom}
\setlength{\beamer@decolinesz@linebottom}{.01\paperheight}

% Footer.
\defbeamertemplate*{footline}{decolines theme}
{
  \leavevmode%
  \hbox{%
  \begin{beamercolorbox}[wd=.2\paperwidth,ht=0ex,dp=0ex,center]{}%
  \end{beamercolorbox}
  \begin{beamercolorbox}[wd=.8\paperwidth,ht=0ex,dp=0ex, right]{}%
  \end{beamercolorbox}%
  } %
  % First line.
  \hbox{%
    % Page number.
  \begin{beamercolorbox}[wd=.2\paperwidth, ht=\beamer@decolinesz@lineup, dp=0pt, center]{}%
  \usebeamerfont{palette primary}\insertframenumber{} \beamer@decolinesz@pageofpages{} \inserttotalframenumber%
  \end{beamercolorbox}
  %Author
  \begin{beamercolorbox}[wd=.8\paperwidth, ht=\beamer@decolinesz@lineup, dp=0pt, right]{lineup}%
    \usebeamerfont{palette primary} \bfseries \insertauthor ~~{}
  \end{beamercolorbox}%
  } %
  % Second line.
  \hbox{%
  \begin{beamercolorbox}[wd=\paperwidth,ht=\beamer@decolinesz@linemid,dp=0pt]{linemid}%
  \end{beamercolorbox}%
  } %
  % Third line.
  \hbox{%
  \begin{beamercolorbox}[wd=.1\paperwidth,ht=\beamer@decolinesz@linebottom,dp=0pt]{}%
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.9\paperwidth,ht=\beamer@decolinesz@linebottom,dp=0pt]{linebottom}%
  \end{beamercolorbox}%
  }%
  \vskip-.5px%
}

\defbeamertemplate*{headline}{decolinesz theme}
{
  \leavevmode%
  \hbox{%
  \begin{beamercolorbox}[wd=0.95\paperwidth,ht=\headerheight,dp=0pt]{page header} \usebeamerfont{palette primary} \bfseries \inserttitle
  \end{beamercolorbox}%
  } %
  \vskip0pt%
}

\defbeamertemplate*{frametitle}{decolinesz theme}[1][left]
{
  \ifbeamercolorempty[bg]{frametitle}{}{\nointerlineskip}%
  \@tempdima=\textwidth%
  \advance\@tempdima by\beamer@leftmargin%
  \advance\@tempdima by\beamer@rightmargin%
  \vbox{}\vskip-.5\beamer@leftmargin%
  \begin{beamercolorbox}[sep=\beamer@leftmargin,#1,wd=\the\@tempdima]{}
    \usebeamerfont{frametitle}\usebeamercolor[bg]{framesubtitle}%
    \vbox{}\vskip0ex%
    \if@tempswa\else\csname beamer@fte#1\endcsname\fi%
    \strut\insertframetitle\strut\par%
    {%
      \ifx\insertframesubtitle\@empty%
      \else%
      {\usebeamerfont{framesubtitle}\usebeamercolor[bg]{framesubtitle}\insertframesubtitle\strut\par}%
      \fi
    }%
    \vskip-1ex%
    \if@tempswa\else\vskip-\beamer@leftmargin\fi
  \end{beamercolorbox}%
  \def\beamer@decolinesz@truetext{true}%
  \ifx\beamer@decolinesz@titleline\beamer@decolinesz@truetext%
    \vskip-.5\beamer@leftmargin%
    \begin{beamercolorbox}[wd=\textwidth,ht=.1ex,dp=0ex]{linemid}%
    \end{beamercolorbox}%
  \fi
}

% Frame title continuations, default
\defbeamertemplate*{frametitle continuation}{decolinesz theme}{(\insertcontinuationcount)}

\defbeamertemplate*{sidebar right}{decolinesz theme}
{
  \vskip.1\beamer@leftmargin%
  \llap{\insertlogo\hskip.5\beamer@leftmargin}%
  \vfill%
}

\mode
<all>
